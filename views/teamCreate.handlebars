<nav class="level is-mobile">
        <div class="level-item">
            <div>
                <p class="title">NHL Fantasy Draft</p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
                <a href="/lobby"><p class="title">Return To Lobby</p></a>
            </div>
        </div>
</nav>

<div class = "row">
    <div class = "banner is-mobile">
        <div class="columns">
            <div class="column is-4">
                <h3>Total Spent:</h3><h3 id = "totalSalary">{{this.total_cost}}</h3>
                <input class="button" type="submit" value="Save Team">
            </div>
            <div class="column is-4">
                    <h3>Total Points:</h3><h3 id = "totalPoints">{{this.total_points}}</h3>
            </div>

        </div>
    </div>
</div>

<div class = "icecontainer">
    <div class = "icebackground">
            <div class="columns is-mobile">
                <div class="column is-4">
                    <table class="table playerTable">
                    <thead>
                        <tr><th colspan="5">Your Team's Players</th></tr>
                        <th>Name</th>
                        <th>Goals</th>
                        <th>Assists</th>
                        <th>Points</th>
                        <th>Remove Player?</th>
                    </tr>
                    </thead>
                    <!-- Append Player 1 Table-->
                        {{#each playerList}}
                        {{#if this.isDrafted}}
                            <tr><th>{{this.player_name}}</th> <th>{{this.goals}}</th> <th>{{this.assists}}</th> <th>{{this.total_points}}</th></tr>

                            <form method="POST" action="/teamCreate/update?_method=PUT" class="button-size">
                                <input type="hidden" name="player_info_id" type="text" value={{this.id}}>
                                <input class="button" type="submit" value="Remove Player">
                            </form>                                     
                        {{/if}}
                        {{/each}}
                </div>
                <div class="column is-8">
                    <table class="table playerTable">
                        <thead>
                            <tr><th colspan="7">Available Players</th></tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Salary</th>
                            <th>Goals</th>
                            <th>Assists</th>
                            <th>Points</th>
                            <th>Draft Player?</th>
                        </tr>
                        </thead>
                        <!-- Append Player Table-->
                        {{#each playerList}}
                        <!--{{#unless this.isDrafted}}-->

                            <tr><th>{{this.id}}</th> <th>{{this.player_name}}</th> <th>{{this.cap}}</th> <th>{{this.goals}}</th> <th>{{this.assists}}</th> <th>{{this.total_points}}</th> 
                            <th>
                            <form method="POST" action="/teamCreate/update?_method=PUT" class="button-size">
                                <input type="hidden" name="player_info_id" type="text" value={{this.id}}>
                                <input class="button" type="submit" value="Select Player">
                            </form></th>
                            </tr>
                        <!--{{/unless}}-->
                        {{/each}}
                    </table>
                </div>
            </div> 
    </div>
</div>