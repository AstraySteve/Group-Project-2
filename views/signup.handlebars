<!--
    handlebar for the signup user page
-->
<div class="container-fluid header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h1 class="d-inline subhead">NHL Fantasy Draft</h1>
            </div>
        </div>
    </div>
</div>

<div class="container content">
    <h5 class="subhead">SIGN UP</h5>
    <div class="row justify-content-center">
        <form id="signup" name="signup" method="post" action="/signup">
            <label class="subhead" for="username">Username</label>
            <input name="username" type="username"/>
            <br>
            <label class="subhead" for="password">Password</label>
            <input name="password" type="password"/>
            <br>
            <input class="btn btn-block" id="submit" type="submit" value="Sign Up" />
        </form>
    </div>
</div>
