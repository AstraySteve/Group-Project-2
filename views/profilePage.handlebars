<div class="container-fluid header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h3 class="d-inline subhead">Welcome, {{userName}}</h3>
            </div>
            <div class="col-md-6 text-right">
            <!-- Example single danger button -->
                <div class="btn-group">
                <button type="button" class="btn btn-lg btn-outline-primary dropdown-toggle button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menu
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="index.html">Manage Team</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/logout">Logout</a>
                </div>
            </div>
            </div>

        </div>
    </div>
</div>

<!--Main content area-->
<div class="container content">
    <div class="container box">
        <div class="row">
            <div class="col-md-6">
                <h3 class="d-inline subhead">Team Manager</h3>
            </div>
            <div class="col-md-6">
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link active" href="/teamcreate">Create Team <i class="fa fa-plus" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/teamcreate">Edit Team <i class="fa fa-cog fa-spin" aria-hidden="true"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container content2">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
            <!--This is where the data will go-->
                <h3>Team Name: <span id="teamName">{{teamName}}</span></h3>
                <table>
                    <tr>
                        <th style="padding: 8px; text-align: left">Player</th>
                        <th style="padding: 8px; text-align: left">Cost</th>
                        <th style="padding: 8px; text-align: left">Goals</th>
                        <th style="padding: 8px; text-align: left">Assists</th>
                        <th style="padding: 8px; text-align: left">Total</th>
                    </tr>
                    {{#each playerList}}
                        <tr>
                            <td style="padding: 8px; text-align: left">{{this.player_name}}</td>
                            <td style="padding: 8px; text-align: left">{{this.cap}}</td>
                            <td style="padding: 8px; text-align: left">{{this.goals}}</td>
                            <td style="padding: 8px; text-align: left">{{this.assists}}</td>
                            <td style="padding: 8px; text-align: left">{{this.total_points}}</td>
                        </tr>
                    {{/each}}
                </table>
                <hr>
                <table>
                    <tr>
                        <th style="padding: 8px; text-align: left">Ranking</th>
                        <th style="padding: 8px; text-align: left">Total Cost</th>
                        <th style="padding: 8px; text-align: left">Total Goals</th>
                        <th style="padding: 8px; text-align: left">Total Assists</th>
                        <th style="padding: 8px; text-align: left">Total</th>
                    </tr>
                    <tr>
                        <td style="padding: 8px; text-align: left">{{teamRanking}}</td>
                        <td style="padding: 8px; text-align: left">{{teamCost}}</td>
                        <td style="padding: 8px; text-align: left">{{teamGoals}}</td>
                        <td style="padding: 8px; text-align: left">{{teamAssists}}</td>
                        <td style="padding: 8px; text-align: left">{{teamTotal}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

